                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Kullanicilar">
                            <span class="menu-title">Kullanıcılar </span> 
                             
                            <i class="mdi mdi-account-multiple-outline menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="AdminBlog">
                            <span class="menu-title">Blog</span>
                            <i class="mdi mdi-blogger menu-icon"></i>
                        </a>
                    </li>
                </ul>
            </nav>
          
            <div class="main-panel">
                <div class="content-wrapper"style="background-color:whitesmoke;">
                   
                    <div class="row">
                        <div class="col-md-6 stretch-card grid-margin">
                            <div class="card bg-gradient-success card-img-holder text-white" style="width:300px;height:150px;">
                                <div class="card-body">
                                    <h2 class="font-weight-normal mb-3" style="text-align:center;    ">Tarifler <i class="mdi mdi-bookmark-outline"></i></h2>
                                    <h4 class="mb-5">Toplam 10 Tarif</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 stretch-card grid-margin">
                            <div class="card bg-gradient-danger card-img-holder text-white" style="width:300px;height:150px;">
                                <div class="card-body">
                                    <h2 class="font-weight-normal mb-3" style="text-align: center;  ">Kullanıcılar                        <i class="mdi mdi-account-multiple-outline"></i> </h2>
                                    <h4 class="mb-5">5 Kullanıcı</h4>
                                    <i class="dripicons-home i-icon"></i>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-12 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title" style="   color: #C0503C ">Tarifler</h4>
                                    <div class="table-responsive  ">
                                        <table class="table  table-hover">
                                            <thead>
                                                <tr>
                                                    <th> Tarif ID </th>
                                                    <th> Tarif Adı </th>
                                                    <th> Kategori </th>
                                                    <th> Yazar </th>
                                                    
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (var item in Model.Tarifler)
                                                {
                                                    <tr>
                                                        <th>@item.Id</th>
                                                        <th> <a href="TarifDetay"> <img src="@item.RecipeImg" class="me-2" alt="image"></a> @item.RecipeName </th>
                                                        <th>@item.C_Id</th>
                                                        <th>@item.UserId</th>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        <br /><br />
                                        <a href="Tarifler" class="button bueno-btn">Devamını Gör</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title" style="   color: #C0503C ">Kullanıcılar</h4>
                                    <div class="table-responsive">
                                        <table class="table table-hover  ">
                                            <thead>
                                                <tr>
                                                    <th> ID </th>
                                                    <th>Kullanıcı Adı </th>
                                                    <th> E-posta </th>
                                                    <th> Rol </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Kullanicilar)
                                                {
                                                    <tr>
                                                        <th>@item.Id</th>
                                                        <th> <a href="TarifDetay"> <img src="@item.ProfilePhoto" class="me-2" alt="image"></a> @item.UserName </th>
                                                        <th>@item.Email_</th>
                                                        <th>@item.Role</th>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                        <br /><br />
                                        <a href="Kullanicilar" class="button bueno-btn">Devamını Gör</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
