@model List<Bitirme_Odevi.Users>
@{
    ViewBag.Title = "Kullanicilar";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Kullanıcılar</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/PurpleAdmin-Free-Admin-Template-master/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/PurpleAdmin-Free-Admin-Template-master/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/PurpleAdmin-Free-Admin-Template-master/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/PurpleAdmin-Free-Admin-Template-master/assets/images/favicon.ico" />

    <style>

        input[type=text] {
            border: 1px solid #ebedf2;
            font-family: "ubuntu-regular", sans-serif;
            font-size: 0.8125rem;
            box-shadow: none;
            display: block;
            width: 100%;
            padding: 0.94rem 1.375rem;
            font-weight: 400;
            line-height: 1;
            color: #212529;
            
            border-radius: 2px;
            height: calc(2.25rem + 2px);
            background-color: #fff;
            text-align: left;
        }

        .bueno-btn {
            background-color: #e3724c;
            -webkit-transition-duration: 500ms;
            transition-duration: 500ms;
            position: relative;
            z-index: 1;
            display: inline-block;
            min-width: 160px;
            height: 50px;
            color: #ffffff;
            border-radius: 0;
            padding: 0 30px;
            font-size: 14px;
            line-height: 50px;
            font-weight: 500;
            text-transform: capitalize;
        }
    </style>
</head>
<body>
    <div class="container">

        <div class="container-fluid page-body-wrapper">

            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                            <div class="nav-profile-image">
                                <img src="~/bueno-master/img/imgs/user.png" alt="profile">
                                <span class="login-status online"></span>
                                <!--change to offline or busy as needed-->
                            </div>
                            <div class="nav-profile-text d-flex flex-column">
                                <span class="font-weight-bold mb-2">Elanur Gürler</span>
                                <span class="text-secondary text-small">Site Yöneticisi</span>
                            </div>

                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Admin">
                            <span class="menu-title">Admin Paneli</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                            <span class="menu-title">Tarifler</span>
                            <i class="menu-arrow"></i>
                            <i class="mdi mdi-silverware-variant menu-icon"></i>
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href=" Tarifler">Tarifler</a></li>
                                <li class="nav-item"> <a class="nav-link" href="Kategori ">Kategoriler</a></li>
                                <li class="nav-item"> <a class="nav-link" href="Yorumlar ">Yorumlar</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Kullanicilar">
                            <span class="menu-title">Kullanıcılar </span>

                            <i class="mdi mdi-account-multiple-outline menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="AdminBlog">
                            <span class="menu-title">Blog</span>
                            <i class="mdi mdi-blogger menu-icon"></i>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="main-panel">
                <div class="content-wrapper" style="background-color:whitesmoke;">

                    <div class="row">
                        <div class="col-12 col-sm-8">

                        </div>
                        <div class="col-12 col-sm-4">

                            <a class="btn  btn-secondary" type="button" href="#kullaniciekle">Kullanıcı Ekle</a>
                            <br /><br />
                        </div>

                        <div class="col-12 grid-margin ">
                            <div class="card">
                                <div class="card-body">
                                    <h2 style="   color: #C0503C ">Kullanıcılar</h2>

                                    <div class="col-10">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="Kullanıcı adı ile ara" aria-label="Recipient's username" aria-describedby="basic-addon2">

                                                <button class="btn  btn-secondary" type="button">Ara</button>


                                            </div>

                                        </div>
                                    </div>
                                    <table class="table table-hover" style="background-color:white;">
                                        <thead>
                                            <tr>
                                                <th> ID </th>
                                                <th>Ad-<br />Soyad</th>
                                                <th>Kullanıcı <br />Adı </th>
                                                <th>Doğum Tarihi</th>
                                                <th> E-posta </th>
                                                <th> Rol </th>
                                                <th>İşlem </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var item in Model){ 
                                                 <tr>
                                                     <td>@item.Id   </td>
                                                     <td>@item.FullName</td>
                                                     <td>@item.UserName</td>
                                                     <td>@item.Email_ </td>
                                                     <td>@Convert.ToDateTime(item.BirthDate).ToShortDateString()</td>
                                                     <td> @item.Role  </td>
                                                
                                                    <td><a class="btn btn-sm btn-success" href="#duzenle"> Düzenle </a> <a class="btn btn-sm  btn-danger">Sil </a></td>
                                                </tr>
                                             }
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 grid-margin stretch-card" id="duzenle">
                            <div class="card" style="background-color:white ;">
                                <div class="card-body">
                                    <h4 class="card-title" style="   color: #C0503C ">Kullanıcı Bilgileri Düzenle</h4>
                                    <form class="forms-sample">
                                        <div class="form-group">
                                            <label for="exampleInputUsername1">Ad - Soyad</label>
                                            <input type="text" class="form-control" id="exampleInputUsername1" placeholder="Ad - Soyad">
                                        </div>
                                        @*<div class="form-group">
                                                <label for="exampleSelectGender">Cinsiyet</label>
                                                <select class="form-control" id="exampleSelectGender">
                                                    <option>Seçiniz</option>
                                                    <option>Kadın</option>
                                                    <option>Erkek</option>
                                                </select>
                                                <br /><br />
                                            </div>*@
                                        <div class="form-group">
                                            <label for="exampleInputUsername1">Kullanıcı Adı</label>
                                            <input type="text" class="form-control" id="exampleInputUsername1" placeholder="Kullanıcı Adı">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">E-posta</label>
                                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="E-posta">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Şifre</label>
                                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Şifre">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlSelect2">Rol</label>
                                            <select class="form-control form-control-sm" id="exampleFormControlSelect2" style="width: 277px; height: 38px; padding: 6px 12px; border: 1px solid #ced4da;">
                                                <option>Seçiniz</option>

                                                <option>Yönetici</option>
                                                <option>Üye</option>
                                            </select>
                                            <br />
                                        </div>
                                        <div class="form-group">
                                            <br />
                                            <label>Fotoğraf Ekle</label>
                                            <input type="file" name="img[]" class="file-upload-default" multiple>
                                            <div class="input-group col-xs-12">
                                                <input type="text" class="form-control file-upload-info" disabled placeholder="Fotoğraf Ekle">
                                                <span class="input-group-append">
                                                    <button class="file-upload-browse btn btn-secondary" type="button">Ekle</button>
                                                </span>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-success">Değişiklikleri Kaydet</button>
                                        <button class="btn btn-danger">Sil</button>

                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 grid-margin stretch-card" id="kullaniciekle">
                            <div class="card" style="background-color:white ;">
                                <div class="card-body">
                                    <h4 class="card-title" style="   color: #C0503C ">Kullanıcı Ekle</h4>
                                    <form class="forms-sample">
                                        <div class="form-group">
                                            <label for="exampleInputUsername1">Ad - Soyad</label>
                                            <input type="text" class="form-control" id="exampleInputUsername1" placeholder="Ad - Soyad">
                                        </div>
                                        @*<div class="form-group">
                                                <label for="exampleSelectGender">Cinsiyet</label>
                                                <select class="form-control" id="exampleSelectGender">
                                                    <option>Seçiniz</option>
                                                    <option>Kadın</option>
                                                    <option>Erkek</option>
                                                </select>
                                                <br /><br />
                                            </div>*@
                                        <div class="form-group">
                                            <label for="exampleInputUsername1">Kullanıcı Adı</label>
                                            <input type="text" class="form-control" id="exampleInputUsername1" placeholder="Kullanıcı Adı">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">E-posta</label>
                                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="E-posta">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Şifre</label>
                                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Şifre">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlSelect2">Rol</label>
                                            <select class="form-control form-control-sm" id="exampleFormControlSelect2" style="width: 277px; height: 38px; padding: 6px 12px; border: 1px solid #ced4da;">
                                                <option>Seçiniz</option>

                                                <option>Yönetici</option>
                                                <option>Üye</option>
                                            </select>
                                            <br />
                                        </div>
                                        <div class="form-group">
                                            <br />
                                            <label>Fotoğraf Ekle</label>
                                            <input type="file" name="img[]" class="file-upload-default" multiple>
                                            <div class="input-group col-xs-12">
                                                <input type="text" class="form-control file-upload-info" disabled placeholder="Fotoğraf Ekle">
                                                <span class="input-group-append">
                                                    <button class="file-upload-browse btn btn-secondary" type="button">Ekle</button>
                                                </span>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-success">Kullanıcı Ekle</button>


                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>


            </div>

        </div>

    </div>

    <script src="~/PurpleAdmin-Free-Admin-Template-master/assets/vendors/js/vendor.bundle.base.js"></script>

    <script src="~/PurpleAdmin-Free-Admin-Template-master/assets/js/off-canvas.js"></script>
    <script src="~/PurpleAdmin-Free-Admin-Template-master/assets/js/hoverable-collapse.js"></script>
    <script src="~/PurpleAdmin-Free-Admin-Template-master/assets/js/misc.js"></script>
    <script src="~/PurpleAdmin-Free-Admin-Template-master/assets/js/file-upload.js"></script>
</body>
</html>
